{
  // Enables IDE autocomplete, validation, and inline documentation
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",

  // Start tracking releases from the current HEAD
  "bootstrap-sha": "HEAD",

  // Tag format: use @ separator instead of - (matches existing tags like eds-core-react@0.49.0)
  "tag-separator": "@",

  // Package configurations
  // Each package needs: release-type, package-name, and component (for scope matching)
  "packages": {
    "packages/eds-core-react": {
      "release-type": "node",
      "package-name": "@equinor/eds-core-react",
      "component": "eds-core-react" // Matches commit scope: feat(eds-core-react)
    },
    "packages/eds-data-grid-react": {
      "release-type": "node",
      "package-name": "@equinor/eds-data-grid-react",
      "component": "eds-data-grid-react"
    },
    "packages/eds-icons": {
      "release-type": "node",
      "package-name": "@equinor/eds-icons",
      "component": "eds-icons"
    },
    "packages/eds-lab-react": {
      "release-type": "node",
      "package-name": "@equinor/eds-lab-react",
      "component": "eds-lab-react"
    },
    "packages/eds-tokens": {
      "release-type": "node",
      "package-name": "@equinor/eds-tokens",
      "component": "eds-tokens"
    },
    "packages/eds-tokens-build": {
      "release-type": "node",
      "package-name": "@equinor/eds-tokens-build",
      "component": "eds-tokens-build"
    },
    "packages/eds-tokens-sync": {
      "release-type": "node",
      "package-name": "@equinor/eds-tokens-sync",
      "component": "eds-tokens-sync"
    },
    "packages/eds-utils": {
      "release-type": "node",
      "package-name": "@equinor/eds-utils",
      "component": "eds-utils"
    }
  },

  // Create one combined PR with all packages that have changes
  // (When merged, creates separate GitHub releases per package automatically)
  "separate-pull-requests": false,

  // Control which commit types appear in CHANGELOG
  // Note: GitHub releases will filter out hidden types, but CHANGELOG includes all
  "changelog-sections": [
    {
      "type": "feat",
      "section": "‚ú® Added"
    },
    {
      "type": "fix",
      "section": "üêõ Fixed"
    },
    {
      "type": "docs",
      "section": "üìù Changed"
    },
    {
      "type": "perf",
      "section": "‚ö° Performance Improvements"
    },
    {
      "type": "refactor",
      "section": "‚ôªÔ∏è Refactoring"
    },
    {
      "type": "chore",
      "section": "üîß Chores"
    },
    {
      "type": "ci",
      "section": "üë∑ CI/CD"
    },
    {
      "type": "build",
      "section": "üì¶ Build System"
    },
    {
      "type": "test",
      "section": "‚úÖ Tests"
    }
  ],

  // How far back to search for commits (increase if you have a deep history)
  "release-search-depth": 500,

  // Skip automatic GitHub releases (we do this manually for now because:
  // hiding ci, build, chore from github release was not possible without also hiding them from changelog)
  "skip-github-release": true,

  // Where to write the changelog for each package
  "changelog-path": "CHANGELOG.md",

  // Pre-1.0.0: feat commits bump minor version (0.x.0)
  "bump-minor-pre-major": true,

  // Pre-1.0.0: breaking changes bump minor, not major
  "bump-patch-for-minor-pre-major": false,

  // Pull request settings
  "pull-request-title-pattern": "chore: release${component}",
  "pull-request-header": "## Release PR\n\nThis PR was automatically generated by release-please.\n\n‚ö†Ô∏è After merging, remember to:\n1. Run the manual publish workflow in GitHub Actions\n2. Publish releases on GitHub\n3. Rebase master from develop\n4. Announce in #eds-design-system",

  // Label for release PRs
  "label": "autorelease: pending"
}
