{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@hooks": ["src/hooks", "src/hooks/*"],
      "@utils": ["src/utils", "src/utils/*"],
      "@components": ["src", "src/*"]
    }
  },
  "include": ["./src/**/*.ts*"],
  "exclude": ["node_modules"]
}
