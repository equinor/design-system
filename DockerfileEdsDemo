# Use specific Node.js version for better reproducibility
FROM docker.io/node:22.12.0-alpine AS build

LABEL org.opencontainers.image.title="EDS Demo Application"
LABEL org.opencontainers.image.description="Equinor Design System Demo Application"
LABEL org.opencontainers.image.source="https://github.com/equinor/design-system"

WORKDIR /app

# Install pnpm globally
RUN npm install -g pnpm@10.15.0

# Copy everything
COPY . ./

# Install dependencies first
RUN pnpm install --frozen-lockfile

# Build CLI tools first, then reinstall to create binary links, then build variables & demo
RUN pnpm --filter eds-demo run build

FROM node:22.12.0-alpine AS runner
WORKDIR /app

ENV NODE_ENV=production \
    PORT=3000 \
    USER=nextjs \
    UID=12345 \
    NEXT_TELEMETRY_DISABLED=1

# Install pnpm and create non-root user
RUN npm install -g pnpm@10.15.0 && \
    addgroup -S "$USER" && \
    adduser -S --uid "$UID" "$USER" && \
    apk add --no-cache tini

# Copy just the essential built files and node_modules
COPY --chown="$USER":"$USER" --from=build /app/packages/eds-demo ./packages/eds-demo
COPY --chown="$USER":"$USER" --from=build /app/node_modules ./node_modules

USER "$UID"

EXPOSE 3000

ENTRYPOINT ["/sbin/tini", "--"]
WORKDIR /app/packages/eds-demo
CMD ["pnpm", "start"]
