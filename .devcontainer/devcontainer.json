// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.203.0/containers/typescript-node
{
  "name": "Node.js & TypeScript",
  "runArgs": ["--init"],
  "image": "mcr.microsoft.com/devcontainers/typescript-node:22-bullseye",
  "customizations": {
    "vscode": {
      "settings": {
        "extensions.ignoreRecommendations": true,
        "git.rebaseWhenSync": true,
        "git.autofetch": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[svg]": {
          "editor.defaultFormatter": "jock.svg"
        },
        /* pretter-vscode needs this line to find the locally installed prettier */
        "prettier.prettierPath": "./node_modules/prettier",
        "editor.formatOnSave": true,
        "yaml.schemas": {
          "http://json.schemastore.org/stylelintrc": ".stylelintrc.yaml",
          "http://json.schemastore.org/eslintrc": ".eslintrc.yaml"
        },
        "files.associations": {
          "*.json": "jsonc",
          "[Dd]ockerfile*": "dockerfile",
          "docker-compose*": "yaml"
        }
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "stylelint.vscode-stylelint",
        "esbenp.prettier-vscode",
        "editorconfig.editorconfig",
        "redhat.vscode-yaml",
        "unifiedjs.vscode-mdx",
        "deque-systems.vscode-axe-linter",
        "styled-components.vscode-styled-components",
        "aaron-bond.better-comments",
        "seatonjiang.gitmoji-vscode",
        "usernamehw.errorlens",
        "eamodio.gitlens",
        "ms-vsliveshare.vsliveshare",
        "davidanson.vscode-markdownlint",
        "ionutvmi.path-autocomplete",
        "jock.svg",
        "github.vscode-pull-request-github",
        "ms-azuretools.vscode-bicep",
        "bierner.markdown-mermaid",
        "bierner.github-markdown-preview"
      ]
    }
  },
  "forwardPorts": [9000],
  "portsAttributes": {
    "9000": {
      "label": "Storybook",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Graphics",
      "onAutoForward": "notify"
    }
  },
  "onCreateCommand": "npm install -g pnpm gitmoji-cli && pnpm install && pnpm recursive install --filter ./packages",
  "remoteUser": "node",
  "features": {
    "ghcr.io/eitsupi/devcontainer-features/jq-likes:2": {},
    "ghcr.io/devcontainers/features/node:1": {}
  }
}
