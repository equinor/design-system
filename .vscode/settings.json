{
  "extensions.ignoreRecommendations": true,
  "git.rebaseWhenSync": true,
  "git.autofetch": true,
  "yaml.schemas": {
    "http://json.schemastore.org/prettierrc": ".prettier.yaml",
    "http://json.schemastore.org/eslintrc": ".eslintrc.yaml"
  },
  "files.associations": {
    "*.json": "jsonc",
    "[Dd]ockerfile*": "dockerfile",
    "docker-compose*": "yaml"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "prettier.prettierPath": "",
  "typescript.tsdk": "node_modules/typescript/lib",
  "task.allowAutomaticTasks": "off",
  "[bicep]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-bicep"
  },
  "workbench.colorCustomizations": {
    "activityBar.background": "#1C3408",
    "titleBar.activeBackground": "#27480C",
    "titleBar.activeForeground": "#F4FCED"
  }
}
