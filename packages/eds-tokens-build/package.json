{
  "name": "@equinor/eds-tokens-build",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "EDS Core Team",
    "email": "fg_eds@equinor.com"
  },
  "homepage": "https://eds.equinor.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/equinor/design-system",
    "directory": "packages/eds-tokens-build"
  },
  "bugs": {
    "url": "https://github.com/equinor/design-system/issues"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js"
    }
  },
  "bin": {
    "build-semantic-static-variables": "./dist/scripts/build-semantic-static-variables.js",
    "build-semantic-dynamic-variables": "./dist/scripts/build-semantic-dynamic-variables.js",
    "build-color-scheme-variables": "./dist/scripts/build-color-scheme-variables.js",
    "generate-color-scheme-tokens": "./dist/scripts/generate-color-scheme-tokens.js",
    "generate-semantic-tokens": "./dist/scripts/generate-semantic-tokens.js",
    "generate-concept-tokens": "./dist/scripts/generate-concept-tokens.js",
    "generate-dynamic-appearance-tokens": "./dist/scripts/generate-dynamic-appearance-tokens.js"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "prettier": "prettier . --write",
    "prettier:check": "prettier . --check",
    "lint": "eslint ./src --ext .ts,.tsx",
    "lint:fix": "eslint --fix"
  },
  "engines": {
    "pnpm": ">=10",
    "node": ">=22"
  },
  "keywords": [
    "design-tokens",
    "style-dictionary",
    "build-tools",
    "css-variables",
    "design-system",
    "equinor",
    "cli"
  ],
  "devDependencies": {
    "@types/node": "^22.18.0",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "style-dictionary": "^5.0.3",
    "style-dictionary-utils": "^4.1.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^2.1.8"
  }
}
