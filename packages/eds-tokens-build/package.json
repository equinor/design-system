    "directory": "packages/eds-tokens-build"
  },
  "bugs": {
    "url": "https://github.com/equinor/design-system/issues"
  },
  "type": "module",
  "bin": {
    "build-semantic-static-variables": "./dist/build-semantic-static-variables.js",
    "build-semantic-dynamic-variables": "./dist/build-semantic-dynamic-variables.js",
    "build-color-scheme-variables": "./dist/build-color-scheme-variables.js",
    "generate-color-scheme-tokens": "./dist/generate-color-scheme-tokens.js",
    "generate-semantic-tokens": "./dist/generate-semantic-tokens.js",
    "generate-concept-tokens": "./dist/generate-concept-tokens.js",
    "generate-dynamic-appearance-tokens": "./dist/generate-dynamic-appearance-tokens.js"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/eds-tokens-build.umd.cjs",
  "module": "./dist/eds-tokens-build.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/eds-tokens-build.js",
      "require": "./dist/eds-tokens-build.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "pnpm run type-check && vite build",
    "build:cli": "tsc -p tsconfig.cli.json",
    "prettier": "prettier ./src --write",
    "lint": "eslint",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^22.18.0",
    "prettier": "3.6.2",
    "style-dictionary": "^5.0.3",
