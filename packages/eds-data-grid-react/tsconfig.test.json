{
  "extends": "../../tsconfig.test.base.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "paths": {
      "react": ["./node_modules/@types/react"],
      "react/*": ["./node_modules/@types/react/*"],
      "react-dom": ["./node_modules/@types/react-dom"],
      "react-dom/*": ["./node_modules/@types/react-dom/*"]
    }
  },
  "include": [
    "src/**/*.test.ts*",
    "src/**/*.spec.ts*",
    "src/**/*.test.js*",
    "src/**/*.spec.js*",
    "jest.config.ts",
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
