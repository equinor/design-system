{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "react": ["./node_modules/@types/react/index.d.ts"],
      "react-dom": ["./node_modules/@types/react-dom/index.d.ts"]
    },
    "typeRoots": [
      "./node_modules",
      "./node_modules/@types",
      "./src/components"
    ],
    "types": ["react", "react-dom", "mdx", "node"]
  },
  "include": ["./src/**/*.ts*", "./*.config.ts"],
  "exclude": ["node_modules", "./src/**/*.test.tsx", "./src/**/*.test.ts"]
}
