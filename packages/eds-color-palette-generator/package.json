{
  "name": "@equinor/eds-color-palette-generator",
  "description": "EDS Color Palette Generator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "docker:build": "docker build -t equinor/color-palette-generator .",
    "docker:run": "docker run -p 3000:3000 equinor/color-palette-generator",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:codegen": "playwright codegen",
    "generate:palette-config-in-markdown": "tsx ./scripts/generate-palette-overview.ts",
    "generate:palette-contrast-report": "tsx ./scripts/generate-palette-contrast-report.ts"
  },
  "dependencies": {
    "colorjs.io": "^0.5.2",
    "next": "15.2.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "dotenv": "^17.0.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.2.4",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
