{
  "name": "eds-demo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "update-tokens:colors:brand": "sync-figma-to-tokens --file-key 9Jody75rpiDhyTgNm3xOHd",
    "update-tokens:colors": "sync-figma-to-tokens --file-key QRFchmc6GHsKSBEdqdFLMr",
    "update-tokens:spacing": "sync-figma-to-tokens --file-key V3XAAjEw7dl2vQmDvG4RNW",
    "update-tokens:typography": "sync-figma-to-tokens --file-key FS9KIlmO8N8rv3rAO65UUi",
    "update-tokens": "pnpm run update-tokens:colors:brand && pnpm run update-tokens:colors && pnpm run update-tokens:spacing && pnpm run update-tokens:typography",
    "_pre-generate:clean": "rimraf ./build && rimraf ./src/variables",
    "_pre-generate:build": "vite build --config vite.generate.config.ts",
    "_pre-generate:copy": "copyfiles ./src/generate/css/*.css ./src/variables --flat && copyfiles ./build/css/*.css ./src/variables --flat",
    "_pre-generate:copy-build": "copyfiles -u 2 \"./build/css/**/*\" ./src/variables",
    "generate": "pnpm run _pre-generate:clean && pnpm run _pre-generate:build && node dist/generate.js && pnpm run _pre-generate:copy && pnpm run _pre-generate:copy-build && lightningcss --bundle ./src/variables/_index.css -o ./src/variables/index.css"
  },
  "dependencies": {
    "@equinor/eds-tokens-build": "^1.0.0",
    "@equinor/eds-tokens-sync": "^1.0.0",
    "@tailwindcss/vite": "^4.1.7",
    "copyfiles": "^2.4.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "style-dictionary": "^4.4.0",
    "tailwindcss": "^4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "lightningcss-cli": "^1.29.3",
    "rimraf": "^6.0.1",
    "style-dictionary-utils": "^4.0.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
