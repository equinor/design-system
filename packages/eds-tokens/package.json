{
  "name": "@equinor/eds-tokens",
  "version": "2.1.0",
  "description": "Design tokens for the Equinor Design System",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/tokens.cjs",
      "default": "./dist/tokens.cjs"
    },
    "./tokens.css": "./tokens.css",
    "./elements.css": "./elements.css",
    "./css/variables": "./build/css/variables.min.css",
    "./css/variables.css": "./build/css/variables.min.css",
    "./json/*/*": "./build/json/*/*.json",
    "./js/color/*": "./build/js/color/*.js",
    "./js/spacing/*": "./build/js/spacing/*.js"
  },
  "types": "./dist/types/index.d.ts",
  "main": "./dist/tokens.cjs",
  "license": "MIT",
  "author": {
    "name": "EDS Core Team",
    "email": "fg_eds@equinor.com"
  },
  "homepage": "https://eds.equinor.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/equinor/design-system",
    "directory": "packages/eds-tokens"
  },
  "bugs": {
    "url": "https://github.com/equinor/design-system/issues"
  },
  "files": [
    "dist/*",
    "build/*",
    "commonjs/*",
    "instructions/*",
    "tokens.css",
    "elements.css"
  ],
  "scripts": {
    "build": "rollup -c && pnpm run types",
    "dev": "rollup -c -w",
    "types": "tsc",
    "prettier:check": "prettier --check src/",
    "build:variables:color-scheme": "build-color-scheme-variables",
    "build:variables:semantic:static": "build-semantic-static-variables",
    "build:variables:semantic:dynamic": "build-semantic-dynamic-variables",
    "build:variables:color": "pnpm run build:variables:color-scheme && pnpm run build:variables:semantic:static && pnpm run build:variables:semantic:dynamic",
    "generate:tokens:color-core": "generate-colors palette-config.json tokens/GnovDpL3UV6X51Ot7Kv6Im",
    "generate:tokens:color-scheme": "generate-color-scheme-tokens",
    "generate:tokens:concept": "generate-concept-tokens",
    "generate:tokens:static": "generate-color-scheme-tokens && generate-semantic-tokens && generate-concept-tokens",
    "generate:tokens:dynamic": "generate-color-scheme-tokens && generate-dynamic-appearance-tokens && generate-concept-tokens",
    "generate:tokens:all-color": "generate-color-scheme-tokens && generate-semantic-tokens && generate-dynamic-appearance-tokens && generate-concept-tokens",
    "_prebuild:variables:typography-and-spacing": "vite build --config vite.generate-variables.config.ts",
    "build:variables:typography-and-spacing": "pnpm run _prebuild:variables:typography-and-spacing && node ./build-generate-variables/generate-variables.js",
    "_prebuild:css-copy-index": "copyfiles ./src/css/*.css ./build/css --flat",
    "_build:css:variables": "lightningcss --bundle ./build/css/index-variables.css -o ./build/css/variables.css",
    "_build:css-min-variables": "lightningcss --minify --bundle ./build/css/index-variables.css -o ./build/css/variables.min.css",
    "_build:css": "pnpm run _prebuild:css-copy-index && pnpm run _build:css:variables && pnpm run _build:css-min-variables",
    "clean": "rimraf build",
    "build:variables": "pnpm run clean && pnpm run build:variables:typography-and-spacing && pnpm run build:variables:color && pnpm run _build:css",
    "update-tokens:spacing-primitives": "sync-figma-to-tokens --file-key cpNchKjiIM19dPqTxE0fqg",
    "update-tokens:spacing-modes": "sync-figma-to-tokens --file-key FQQqyumcpPQoiFRCjdS9GM",
    "update-figma:spacing-primitives": "sync-tokens-to-figma --file-key cpNchKjiIM19dPqTxE0fqg",
    "update-figma:spacing-modes": "sync-tokens-to-figma --file-key FQQqyumcpPQoiFRCjdS9GM",
    "update-tokens:foundations": "sync-figma-to-tokens --file-key GnovDpL3UV6X51Ot7Kv6Im",
    "update-figma:foundations": "sync-tokens-to-figma --file-key GnovDpL3UV6X51Ot7Kv6Im",
    "update-tokens:color-static": "sync-figma-to-tokens --file-key OWxw2XogDLUt1aCvcDFXPw",
    "update-figma:color-static": "sync-tokens-to-figma --file-key OWxw2XogDLUt1aCvcDFXPw",
    "update-tokens:color-dynamic": "sync-figma-to-tokens --file-key nyPaQ3QnI1UAcxKW4a0d2c",
    "update-figma:color-dynamic": "sync-tokens-to-figma --file-key nyPaQ3QnI1UAcxKW4a0d2c",
    "update-tokens": "pnpm run update-tokens:foundations && pnpm run update-tokens:color-static && pnpm run update-tokens:color-dynamic && pnpm run update-tokens:spacing-primitives && pnpm run update-tokens:spacing-modes",
    "update-figma": "pnpm run update-figma:foundations && pnpm run update-figma:color-static && pnpm run update-figma:color-dynamic && pnpm run update-figma:spacing-primitives && pnpm run update-figma:spacing-modes"
  },
  "keywords": [
    "eds",
    "design system",
    "equinor",
    "design tokens"
  ],
  "devDependencies": {
    "@equinor/eds-color-palette-generator": "workspace:^",
    "@equinor/eds-tokens-build": "workspace:^",
    "@equinor/eds-tokens-sync": "workspace:^",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-commonjs": "^28.0.8",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/node": "^24.9.1",
    "copyfiles": "^2.4.1",
    "lightningcss-cli": "^1.30.2",
    "prettier": "3.6.2",
    "rimraf": "^6.1.2",
    "rollup": "^4.52.5",
    "rollup-plugin-delete": "^3.0.1",
    "style-dictionary": "^5.1.1",
    "style-dictionary-utils": "^4.1.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  }
}
